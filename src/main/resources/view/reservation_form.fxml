                <Font name="System Bold" size="18.0" />
            </font>
        </JFXButton>
        <JFXButton buttonType="RAISED" layoutX="783.0" layoutY="221.0" onAction="#btnDeleteOnAction" prefHeight="53.0" prefWidth="126.0" style="-fx-background-color: red;" text="Delete" textAlignment="CENTER">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </JFXButton>
      <TableView fx:id="tblReservation" layoutX="201.0" layoutY="345.0" prefHeight="400.0" prefWidth="582.0">
        <columns>
          <TableColumn fx:id="colTicketID" prefWidth="180.0" text="Ticket ID" />
            <TableColumn fx:id="colPassengerID" prefWidth="193.0" text="Passenger ID" />
            <TableColumn fx:id="colTrainID" prefWidth="209.0" text="Train ID" />
        </columns>
      </TableView>
    </children>

</AnchorPane>
