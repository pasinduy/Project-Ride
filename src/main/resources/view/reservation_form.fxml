    <children>
        <JFXButton alignment="BOTTOM_CENTER" buttonType="RAISED" contentDisplay="TOP" onAction="#btnOnActionBack" prefHeight="99.0" prefWidth="103.0" text="Back" />
        <JFXTextField fx:id="txtId" layoutX="191.0" layoutY="50.0" onAction="#txtSearchOnAction" prefHeight="38.0" prefWidth="182.0" promptText="Ticket ID" />
        <JFXTextField fx:id="txtPassengerID" layoutX="191.0" layoutY="137.0" prefHeight="38.0" prefWidth="182.0" promptText="Passenger ID" />
        <JFXTextField fx:id="txtTrainID" layoutX="191.0" layoutY="228.0" prefHeight="38.0" prefWidth="182.0" promptText="Train ID" />
        <JFXButton buttonType="RAISED" layoutX="545.0" layoutY="62.0" onAction="#btnAddOnAction" prefHeight="53.0" prefWidth="126.0" style="-fx-background-color: green;" text="Add" textAlignment="CENTER">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </JFXButton>
        <JFXButton buttonType="RAISED" layoutX="783.0" layoutY="62.0" onAction="#btnUpdateOnAction" prefHeight="53.0" prefWidth="126.0" style="-fx-background-color: yellow;" text=" Update" textAlignment="CENTER">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </JFXButton>
        <JFXButton buttonType="RAISED" layoutX="545.0" layoutY="221.0" onAction="#btnClearOnAction" prefHeight="53.0" prefWidth="126.0" style="-fx-background-color: blue;" text="Clear" textAlignment="CENTER">
